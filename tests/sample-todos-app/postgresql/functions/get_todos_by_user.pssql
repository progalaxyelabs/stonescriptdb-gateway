CREATE OR REPLACE FUNCTION get_todos_by_user(
    p_user_id INT,
    p_include_completed BOOLEAN DEFAULT TRUE
)
RETURNS TABLE (
    todo_id INT,
    title TEXT,
    description TEXT,
    is_completed BOOLEAN,
    priority INT,
    due_date DATE,
    created_on TIMESTAMPTZ,
    tags JSON
) AS $$
BEGIN
    RETURN QUERY
    SELECT
        t.todo_id,
        t.title::TEXT,
        t.description::TEXT,
        t.is_completed,
        t.priority,
        t.due_date,
        t.created_on,
        COALESCE(
            (SELECT json_agg(json_build_object('tag_id', tg.tag_id, 'name', tg.name, 'color', tg.color))
             FROM todo_tags tt
             JOIN tags tg ON tg.tag_id = tt.tag_id
             WHERE tt.todo_id = t.todo_id),
            '[]'::json
        ) AS tags
    FROM todos t
    WHERE t.user_id = p_user_id
      AND (p_include_completed OR NOT t.is_completed)
    ORDER BY t.priority ASC, t.due_date ASC NULLS LAST;
END;
$$ LANGUAGE plpgsql;
